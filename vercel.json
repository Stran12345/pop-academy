{
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/html/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/javascript/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/main.py"
    },
    {
      "src": "/(css|javascript)/(.*)",
      "dest": "/frontend/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/html/$1"
    }
  ]
}
